<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" packages="net.minecrell.terminalconsole">
  <Appenders>
    <TerminalConsole name="TerminalConsole">
      <PatternLayout
        pattern="%highlight{[%d{HH:mm:ss} %level] [%logger]: %minecraftFormatting{%msg}%n}{FATAL=red, ERROR=red, WARN=yellow, INFO=normal, DEBUG=teal}"/>
    </TerminalConsole>
    <RollingRandomAccessFile name="File" fileName="logs/latest.log" filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss} %level [%logger] %msg%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <OnStartupTriggeringPolicy/>
      </Policies>
    </RollingRandomAccessFile>
  </Appenders>
  <Loggers>
    <logger name="io.netty" level="ERROR"/>
    <Root level="INFO">
      <AppenderRef ref="File"/>
      <AppenderRef ref="TerminalConsole"/>
    </Root>
  </Loggers>
</Configuration>
